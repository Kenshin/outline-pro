// use nib
@import 'nib'

outline
    display: inline-block;

outline.bold
    font-weight: bold;

outline.italic
    font-style: italic;

outline.code
    margin: 0;
    padding: 4px;

    background-color: rgba( 51, 51, 51, .15 );
    border-radius: 3px;

.outline-primary
    margin: 3px 0;
    border-right: 3px solid #D32F2F;

.outline-secondary
    margin: 3px 0;
    border-right: 3px solid #3F51B5;

.outline-normal
    margin: 3px 0;
    border-right: 3px solid #64B5F6;

outline.tag
    margin: 0 2px;
    padding: 3px 10px;

    color: #fff;
    font-weight: 500;
    border-radius: 2px;

    &.project
        background-color: #9c27b0;
    &.release
        background-color: #03a9f4;
    &.feature
        background-color: #4caf50;
    &.bug
        background-color: #f44336;
    &.todo
        background-color: #56d1d8;
    &.doing
        background-color: #ff9d44;
    &.done
        background-color: #d9e3e8;
    &.next
        background-color: #fdd0ae;
    &.qd
        background-color: #ff7281;
    &.pending
        background-color: #a78674;
