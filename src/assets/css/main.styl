// use nib
@import 'nib'

outline
    display: inline-block;

outline.bold
    font-weight: bold;

outline.italic
    font-style: italic;

outline.code
    margin: 0;
    padding: 4px;

    background-color: rgba( 51, 51, 51, .15 );
    border-radius: 3px;

.outline-primary
    margin: 3px 0;
    border-right: 3px solid #D32F2F;

.outline-secondary
    margin: 3px 0;
    border-right: 3px solid #3F51B5;

.outline-normal
    margin: 3px 0;
    border-right: 3px solid #64B5F6;